<h2 class="index_head">Log In</h2>
<div class="row row-cols-1 row-cols-md-2 g-4 container-fluid">
<div class="col">
    <div class="card h-75 w-100 mt-5 ms-2">
    <%=image_tag "logos/signup.png", alt: 'My Image',style:"width:100;height:100%;"%>
    </div>
  </div>
  <div class="col">
    <div class="card ms-2 mt-2" style="border:none;background-color:black;">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email ,class:"label_form"%><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"label_input w-100"%>
        </div>

        <div class="field">
          <%= f.label :password ,class:"label_form"%><br />
          <%= f.password_field :password, autocomplete: "current-password" ,class:"label_input w-100"%>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field" style="margin:1rem 0rem 1rem 0rem;">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me%>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in" ,class:"btn btn-danger label_input w-100"%>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>